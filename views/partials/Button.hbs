<!-- position: <RIGHT/LEFT> / <UP/DOWN> / <FORWARD/BACKWARD> -->

<a-box
  src='#qrcode'
  position='{{position}}'
  {{! animation__position='property: object3D.position.y; to: 0.3; dir: alternate; dur: 2000; loop: true' }}
  rotation='-0.5 0 0'
  height='0.4'
  width='0.4'
  depth='0.4'
  {{! scale-on-mouseenter }}
